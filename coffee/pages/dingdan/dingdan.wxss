/* dingdan.wxss - 添加新样式 */
.dingdan .content .item {
  width: 710rpx;
  height: auto; /* 修改为自适应高度 */
  background-color: white;
  border-radius: 36rpx;
  display: flex;
  flex-direction: column; /* 改为纵向排列 */
  margin: 20rpx;
  padding-bottom: 15rpx;
  overflow: hidden;
}

.dingdan .content .item .store-info {
  width: 100%;
  padding: 15rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
}

.dingdan .content .item .store-info .store-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.dingdan .content .item .store-info .order-status {
  font-size: 24rpx;
  color: #999;
}

.dingdan .content .item .item-content {
  display: flex;
  align-items: center;
  padding: 15rpx 0;
}

.dingdan .content .item .img {
  width: 200rpx;
  height: 170rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
}

.dingdan .content .item .img image {
  width: 100%;
  height: 100%;
  border-radius: 36rpx;
}

.dingdan .content .item .right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 290rpx;
  height: 170rpx;
  margin-left: 20rpx;
}

.dingdan .content .item .right .text {
  display: flex;
}

.dingdan .content .item .right .money {
  color: red;
}

/* 添加商品数量样式 */
.dingdan .content .item .right .quantity {
  font-size: 26rpx;
  color: #666;
  margin: 5rpx 0;
}

.dingdan .content .item .pingjia {
  width: 160rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #D53034;
  border-radius: 50rpx;
  border: 1px solid #D53034;
  font-size: 28rpx;
}

.dingdan .content .item .pingjia.completed {
  color: #07c160;
  border: 1px solid #07c160;
}

.dingdan .kong {
  width: 750rpx;
  height: 200rpx;
  color: gray;
  display: flex;
  justify-content: center;
  align-items: center;
}