.pinglun {
  width: 750rpx;
  height: 100vh;
  background-color: #F7F7F7;
}
.pinglun .conent {
  display: flex;
  width: 750rpx;
  height: 200rpx;
  background-color: white;
}
.pinglun .conent .img {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  height: 200rpx;
  margin-left: 30rpx;
}
.pinglun .conent .img image {
  width: 200rpx;
  height: 120rpx;
  border-radius: 10rpx;
}
.pinglun .conent .right {
  margin-left: 30rpx;
  font-size: 32rpx;
}
.pinglun .conent .right .title {
  margin-top: 20rpx;
}
.pinglun .conent .right .money {
  font-weight: bold;
  color: red;
  margin-top: 20rpx;
}
.pinglun .ping {
  width: 750rpx;
  background-color: white;
  margin-top: 20rpx;
}
.pinglun .ping .title {
  display: flex;
  align-items: center;
  height: 80rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-left: 30rpx;
}
.pinglun .ping .item {
  display: flex;
  align-items: center;
  width: 690rpx;
  height: 200rpx;
  margin-left: 30rpx;
  border-bottom: 1px solid #EDEDED;
  font-size: 32rpx;
}
.pinglun .ping .item image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10000rpx;
}
.pinglun .ping .item .left {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 120rpx;
  width: 340rpx;
  margin-left: 20rpx;
}
.pinglun .ping .item .left .msg {
  width: 340rpx;
  color: gray;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.pinglun .ping .item .right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 120rpx;
}
.pinglun .ping .item .right .star .icon {
  width: 30rpx;
  height: 30rpx;
}
.pinglun .ping .item .right .shijian {
  color: #BCBFBE;
  margin-left: 20rpx;
}
.pinglun .wu {
  width: 750rpx;
  height: 200rpx;
  color: gray;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
}
