page {
  width: 100vw;
  height: 100vh;
}
.category {
  width: 100%;
  height: 100%;
}
.category .cates {
  display: flex;
  height: calc(100vh - 190rpx);
}
.category .cates .left_menu_list {
  flex: 3;
  background-color: #F6F6F6;
  color: #9D9D9D;
}
.category .cates .left_menu_list .menu_item {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
}
.category .cates .left_menu_list .active {
  border-left: 10rpx solid #aee8f7;
  font-weight: bold;
  font-size: 32rpx;
  color: #aee8f7;
}
.category .cates .right_content {
  flex: 12;
  background-color: #ffffff;
}
.category .cates .right_content .conent {
  font-size: 28rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  width: 410rpx;
}
.category .cates .right_content .conent .conent-item {
  display: flex;
  width: 710rpx;
  height: 220rpx;
  margin-bottom: 20rpx;
  background-color: white;
  border-radius: 20rpx;
}
.category .cates .right_content .conent .conent-item .img {
  width: 200rpx;
  height: 150rpx;
  align-self: center;
  margin-left: 20rpx;
}
.category .cates .right_content .conent .conent-item .img image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.category .cates .right_content .conent .conent-item .left {
  width: 320rpx;
  height: 260rpx;
  font-size: 32rpx;
  margin-left: 30rpx;
}
.category .cates .right_content .conent .conent-item .left .title {
  margin-top: 25rpx;
  margin-bottom: 15rpx;
  font-weight: bold;
  height: 40rpx;
  font-size: 32rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.category .cates .right_content .conent .conent-item .left .jianjie {
  width: 330rpx;
  height: 80rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.category .cates .right_content .conent .conent-item .left .biaoqian {
  display: flex;
  align-items: center;
  color: red;
  font-weight: bold;
}
.category .cates .right_content .conent .conent-item .left .biaoqian .a {
  margin-right: 20rpx;
}
.category .cates .right_content .conent .conent-item .right {
  height: 210rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  gap: 20rpx;
}
.category .cates .right_content .conent .conent-item .right .btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 70rpx;
  height: 70rpx;
  font-size: 24rpx;
  color: white;
  border-radius: 100000rpx;
}

.category .cates .right_content .conent .conent-item .right .add-cart-btn {
  background-color: #1F1F1F;
}

.category .cates .right_content .conent .conent-item .right .buy-btn {
  background-color: #2c88ff;
  width: 80rpx;
}

.category .cates .right_content .conent .conent-item .item-title {
  margin: 20rpx 0rpx 0rpx 30rpx;
  line-height: 80rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.category .cates .right_content .text {
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: gray;
}

/* 修改后的门店选择器样式 */
.store-selector {
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.current-store {
  position: relative;
  background-color: #fff;
  padding: 16rpx 20rpx;
  border-radius: 8rpx;
  border: 1rpx solid #eaeaea;
}

.store-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.store-info {
  display: flex;
  flex-direction: column;
}

.address {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.phone {
  font-size: 24rpx;
  color: #666;
}

.arrow-down {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}