/* products.wxss */
.container {
  padding: 20rpx;
}

/* 修改后的门店选择器样式 */
.store-selector {
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.current-store {
  position: relative;
  background-color: #fff;
  padding: 16rpx 20rpx;
  border-radius: 8rpx;
  border: 1rpx solid #eaeaea;
}

.store-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.store-info {
  display: flex;
  flex-direction: column;
}

.address {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.phone {
  font-size: 24rpx;
  color: #666;
}

.arrow-down {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}

.arrow-icon {
  color: #888;
  font-size: 24rpx;
}

/* 商品列表样式 */
.products-container {
  display: flex;
  flex-direction: column;
}

.product-item {
  display: flex;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.product-image {
  width: 200rpx;
  height: 200rpx;
}

.product-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.product-info {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.product-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product-price-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  font-size: 32rpx;
  color: #f40;
  font-weight: bold;
}

.price-value {
  font-size: 36rpx;
}

.product-actions {
  display: flex;
  gap: 10rpx;
}

.cart-btn, .buy-btn {
  padding: 8rpx 12rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  text-align: center;
}

.cart-btn {
  background-color: #ebf4f9;
  color: #28588e;
  border: 1px solid #80bbec;
}

.buy-btn {
  background-color: #28588e;
  color: white;
}

.empty-tip {
  padding: 50rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}